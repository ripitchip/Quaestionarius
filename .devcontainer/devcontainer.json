{
  "name": "flet-creator-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/app",
  "runArgs": [
    "--network=host",
    "--ipc=host",
    "--device=/dev/dri:/dev/dri",
    "-e",
    "DISPLAY=${localEnv:DISPLAY}",
    "-e",
    "GDK_BACKEND=x11",
    "-v",
    "/tmp/.X11-unix:/tmp/.X11-unix"
  ],
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "postCreateCommand": "pip install --user --no-cache-dir flet",
  "postStartCommand": "dbus-daemon --session --address=$DBUS_SESSION_BUS_ADDRESS --nofork --nopidfile --syslog-only &",
  "remoteUser": "vscode"
}