{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-write-text-file",
    "opener:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/hello",
          "sidecar": true,
          "args": true
        },
        {
          "name": "binaries/google_auth",
          "sidecar": true,
          "args": true
        },
        {
          "name": "binaries/json_processor",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}